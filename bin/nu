function usage() {
    cat <<EOF
Output stdin with line numbers.

Usage: ${SCRIPTNAME}

Examples:

  # ls with line numbers
  ls | ${SCRIPTNAME}

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

SCRIPTNAME=$(basename "${BASH_SOURCE}")


function main() {
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
        usage && exit 0
    fi

    number "$@"
}


function number() {
    cat -n "$@"
}


##############################################################################
# ENTRY POINT

main "$@"
