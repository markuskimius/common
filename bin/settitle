function settitle() {
    local title="${*-}"

    if (( ! $# )); then
        title="${USER-$(whoami)}@${HOSTNAME-$(hostname)}"
    fi

    printf "\e]0;%s\a" "$title"
}

if (( ${#BASH_SOURCE[@]} == 1 )); then
    settitle "$@"
fi
