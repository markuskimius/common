#!/bin/bash

##############################################################################
# COMMON: Unix utilities
# https://github.com/markuskimius/common
#
# Copyright (c)2020-2021 Mark Kim
# Released under GNU General Public License version 2.
# https://github.com/markuskimius/common/blob/master/LICENSE
##############################################################################

function usage() {
    cat <<EOF
Test your system for compatibility with common.

Usage: ${SCRIPTNAME}

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

SCRIPTNAME=$(basename "${BASH_SOURCE}")
COMMANDS=( jq ps cat git tac grep tput getopt crontab netstat timeout readlink )
VARS=( HOME )
WIDTH=40


function main() {
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
        usage && exit 0
    fi

    test-deps "$@"
}


function test-deps() {
    local tmp

    echo "This tests your system's compatibility with common:"

    for tmp in "${COMMANDS[@]}"; do
        printf "%-*s" $WIDTH "Checking command $tmp ... "

        has_command "$tmp" && pass || fail
    done

    for tmp in "${VARS[@]}"; do
        printf "%-*s" $WIDTH "Checking environment variable \$$tmp ... "

        has_variable "$tmp" && pass || fail
    done
}


function has_command() {
    local cmd=$1

    command -v "$cmd" >/dev/null
}


function has_variable() {
    local var=$1

    declare -p "$var" >&/dev/null
}


function pass() {
    printf "[%s]\n" $(colorize green "PASS")
}


function fail() {
    printf "[%s]\n" $(colorize red "FAIL")
}


function colorize() {
    local color=$1
    local text=$2
    local begin=""
    local end=$'\e[0m'

    case "$color" in
        red)    begin=$'\e[1;31m' ;;
        green)  begin=$'\e[1;32m' ;;
        yellow) begin=$'\e[1;33m' ;;
        blue)   begin=$'\e[1;34m' ;;
        purple) begin=$'\e[1;35m' ;;
        cyan)   begin=$'\e[1;36m' ;;
        white)  begin=$'\e[1;37m' ;;
    esac

    echo "${begin}${text}${end}"
}


if (( ${#BASH_SOURCE[@]} == 1 )); then
    main "$@"
fi
